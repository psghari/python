while True:
    try:
        user_input = input("Enter the temperature (or type 'done' to exit): ").strip().lower()

        if user_input == "done":
            print("Thank you for using the converter!")
            break
     
        user_input=float(user_input)
            
        while True:
            temp_preference = input("Convert from (C to F or F to C)?").strip().lower()
                
            if temp_preference == "c to f":
                converted_temp = ((user_input)*(9/5)+32)
                print(f"The temperature in Fahrenheit is: {converted_temp:.2f} °F")
                break
                    
            elif temp_preference == "f to c":
                converted_temp = ((user_input-32)*(5/9))
                print(f"The temperature in Celsius is: {converted_temp:.2f} °C")
                break
                    
            else:
                print("Not a valid response")          
    
    except ValueError:
        print("Please enter a valid response")
